<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/episode_mode_titlebar_flag"
        android:text="制作者"
        android:textColor="@color/text_play_label"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/Avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_actor_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="昵称"
                android:textColor="@color/text_play_label" />

            <TextView
                android:id="@+id/Sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="用户签名..."
                android:textColor="@color/text_play_label2" />

        </LinearLayout>

        <TextView
            android:id="@+id/Guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/episode_item_selector"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="6dp"
            android:text="关注"
            android:textColor="@color/orange" />
    </LinearLayout>

</LinearLayout>
