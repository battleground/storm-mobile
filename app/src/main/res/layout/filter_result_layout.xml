<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_filter_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/transparent_96"
    android:clickable="true">

    <TextView
        android:id="@+id/text_filter_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="最新榜"
        android:textColor="@color/text_gray"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/btn_menu_filter"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_filter"
        android:src="@drawable/btn_menu_del"
        android:padding="5dp"
        android:visibility="gone"/>

    <include
        layout="@layout/line_h_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>


