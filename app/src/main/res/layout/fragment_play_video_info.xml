<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/episode_mode_titlebar_flag"
        android:text="影片名称"
        android:textColor="@color/text_play_label"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:text="播放4.2万"
        android:textColor="@color/text_play_label2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:padding="12dp"
        android:text="@string/license"
        android:textColor="@color/text_play_label3" />

    <include layout="@layout/line_h_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_zan_nor"
            android:text="赞"
            android:textColor="@color/text_play_label3"  />

        <TextView
            android:id="@+id/Shoucang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_shoucang_nor"
            android:text="收藏"
            android:textColor="@color/text_play_label3" />

        <TextView
            android:id="@+id/Pinglun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_pinglun_nor"
            android:text="评论"
            android:textColor="@color/text_play_label3" />

        <TextView
            android:id="@+id/Share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_share_nor"
            android:text="分享"
            android:textColor="@color/text_play_label3" />
    </LinearLayout>

</LinearLayout>
